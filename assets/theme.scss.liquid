  .cart--no-cookies & {
    display: block;
  }
}

.cart__form {
  .cart--empty &,
  .cart--no-cookies & {
    display: none;
  }
}

.cart__table {
  width: 100%;

  tr {
    border-bottom: 1px solid $color-border;
  }

  th,
  td {
    border: 0;
  }

  td {
    padding: ($gutter * 1.5) 0 $gutter;
    vertical-align: top;

    &.cart-item__price-wrapper {
      padding-right: $gutter;
    }
  }

  th {
    font-weight: $font-weight-body;
    padding: ($gutter / 2) $gutter;

    &:first-child {
      padding-left: 0;
    }

    &:last-child {
      padding-right: 0;
    }
  }

  @include media-query($small) {
    thead {
      @include visually-hidden();
    }

    tr,
    tbody {
      border-bottom: 0;
      width: 100%;
    }

    tbody {
      display: block;
    }
  }
}

/*================ Cart Item ================*/
.cart-item {
  p {
    margin-bottom: 0;
  }

  @include media-query($small) {
    @include display-flexbox();
    @include flex-wrap(wrap);
    @include align-items(flex-start);
  }
}

.cart-item__image-wrapper {
  max-width: 100px;

  @include media-query($small) {
    @include flex(0 0 60px);
  }
}

.cart-item__image-link {
  @include media-query($small) {
    display: inline-block;
    width: 60px;
    height: 60px;
    background-size: cover;
    background-color: $color-input-background;
    border-radius: 50%;
  }

  @include media-query($medium-up) {
    background-size: 0 0;
  }
}

.cart-item__image {
  @include media-query($small) {
    @include visually-hidden();
  }

  @include media-query($medium-up) {
    max-width: 100px;
  }
}

td.cart-item__meta {
  padding-left: $gutter;
  padding-right: $gutter;

  @include media-query($medium-up) {
    width: 300px;
  }

  @include media-query($small) {
    @include flex(3 1 0%);
    @include display-flexbox;
    @include flex-direction(column);
    width: auto;
  }
}

.cart-item__meta-title {
  display: inline-block;
  margin-bottom: 5px;
  font-size: rem(18);
  line-height: 1;
  text-decoration: none;

  @include media-query($small) {
    font-size: rem(16);
  }
}

.cart-item__meta-variant {
  font-size: rem(12);
}

.cart-item__remove {
  padding: 0;
  font-size: rem(12);
  color: $color-body-text;
  border-bottom-color: currentColor;
  margin-bottom: $gutter;
  display: inline-block;
}

.cart-item__message {
  opacity: 0;
  font-size: 14px;
  color: $color-error;
  transition: opacity 0.25s ease-out;

  .ajax-cart--error & {
    opacity: 1;
  }
}

.cart-item__property {
  letter-spacing: 1px;
}

.cart-item__qty {
  text-align: center;

  @include media-query($small) {
    text-align: right;
  }
}

.cart-item__qty-label {
  @include visually-hidden();

  @include media-query($small) {
    display: inline-block;
    margin-right: 5px;
    vertical-align: middle;
  }
}

input.cart-item__qty-input {
  text-align: center;
  width: 60px;
  padding: 10px 5px;
  margin-bottom: 0;

  @include media-query($small) {
    width: 50px;
    padding: 5px;
    line-height: 1.5;
  }

  @include media-query($medium-up) {
