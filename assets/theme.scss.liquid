/*================ Slider ================*/
.slider {
  position: relative;
  width: 100%;
  height: 100%;
}

.slider__slide {
  display: none;
  position: absolute;
  width: 100%;
  height: 100%;
  cursor: pointer;
  cursor: -webkit-grab;
  cursor: -moz-grab;
}

.slider__slide--active {
  display: block;
  @include transform(translateX(0));
}

.slider__slide--previous {
  display: block;
  @include transform(translateX(-100%));

}

.slider__slide--next {
  display: block;
  @include transform(translateX(100%));
}

.slider__slide--transitioning {
  transition: transform 0.2s ease-out;
}

.slider__slide--dragging {
  cursor: -webkit-grabbing;
  cursor: -moz-grabbing;
}

.sk-fading-circle {
  position: absolute;
  top: 50%;
  left: 50%;
  margin: -20px 0 0 -10px;
  width: 40px;
  height: 40px;
}

.supports-no-js .sk-fading-circle {
  display: none;
}

.sk-fading-circle--top {
  margin-top: $gutter * 2.5;
}

.sk-circle {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
}

.sk-circle::before {
  content: '';
  display: block;
  margin: 0 auto;
  width: 15%;
  height: 15%;
  background-color: $color-primary;
  border-radius: 100%;
  @include prefix(animation, sk-circleFadeDelay 1.2s infinite ease-in-out both, webkit spec);
}

@for $i from 1 through 11 {
  $item: $i + 1;
  $deg: ($i * 30) + deg;
  $time: -(1.2 - ($i * 0.1)) + s;

  .sk-circle#{$item}::before {
    @include prefix(animation-delay, $time, webkit spec);
  }

  .sk-circle#{$item} {
    @include prefix(transform, rotate($deg), webkit ms spec);
  }
}

@include keyframes(sk-circleFadeDelay) {
  0%,
  39%,
  100% {
    opacity: 0;
  }

  40% {
    opacity: 1;
  }  
}

@include keyframes(sk-circleFadeDelay) {
  0%,
  39%,
  100% {
    opacity: 0;
  }

  40% {
    opacity: 1;
  }
}

