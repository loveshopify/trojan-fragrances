    display: block;
    position: relative;
    bottom: rem(9);
    width: 0;
    margin: 0 auto;
    height: 2px;
    background-color: $color-body-text;
    transition: all 0.25s;
  }

  @include media-query($medium-up) {
    &:hover {
      @include transform(translateY(-5px));

      &:after {
        @include transform(translateY(5px));
        width: 100%;
      }
    }

    &:hover:active {
      @include transform(translateY(0));

      &:after {
        @include transform(translateY(0));
      }
    }
  }
